[component.following]
source = { url = "https://github.com/prefer-social/kite/releases/download/{{env.BUILD_NAME}}/following.wasm", digest = "sha256:{{env.FOLLOWING_CHECKSUM}}" }
sqlite_databases = ["default"]
key_value_stores = ["mem"]
allowed_outbound_hosts = ["https://*:*", "http://*:*"]

[[trigger.http]]
